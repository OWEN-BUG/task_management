{
  "info": {
    "name": "Task Management API - Full",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{jwt}}", "type": "string" }]
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "jwt", "value": "" }
  ],
  "item": [
    {
      "name": "1. 用户注册",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/users/register",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "2. 用户登录",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const jwt = pm.response.text();",
              "pm.collectionVariables.set('jwt', jwt.trim());"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/users/login",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"123456\"\n}"
        }
      }
    },
    {
      "name": "3. 获取当前用户信息",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/users/me",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }]
      }
    },
    {
      "name": "4. 修改密码",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/users/password",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"oldPassword\": \"123456\",\n  \"newPassword\": \"654321\"\n}"
        }
      }
    },
    {
      "name": "5. 删除用户",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/users/1",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }]
      }
    },
    {
      "name": "6. 创建任务",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/tasks",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"学习 Spring Boot\",\n  \"description\": \"完成 README 和测试\",\n  \"dueDate\": \"2025-08-15T00:00:00.000Z\",\n  \"priority\": 1,\n  \"status\": \"PENDING\"\n}"
        }
      }
    },
    {
      "name": "7. 分页查询任务",
      "request": {
        "method": "GET",
        "url": "{{baseUrl}}/api/tasks?page=1&size=5&status=PENDING",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }]
      }
    },
    {
      "name": "8. 更新任务",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/tasks/1",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"学习 Spring Boot（已更新）\",\n  \"description\": \"完成 README 和测试 + 部署\",\n  \"dueDate\": \"2025-08-20T00:00:00.000Z\",\n  \"priority\": 2,\n  \"status\": \"IN_PROGRESS\"\n}"
        }
      }
    },
    {
      "name": "9. 删除任务",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/tasks/1",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }]
      }
    },
    {
      "name": "10. 添加任务标签",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/tasks/1/tags",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"学习\"\n}"
        }
      }
    },
    {
      "name": "11. 更新任务标签",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/tasks/1/tags/1",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Spring全家桶\"\n}"
        }
      }
    },
    {
      "name": "12. 添加任务评论",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/tasks/1/comments",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"加油！\"\n}"
        }
      }
    },
    {
      "name": "13. 添加子任务",
      "request": {
        "method": "POST",
        "url": "{{baseUrl}}/api/tasks/1/subtasks",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"编写 README\",\n  \"status\": \"PENDING\"\n}"
        }
      }
    },
    {
      "name": "14. 更新子任务",
      "request": {
        "method": "PUT",
        "url": "{{baseUrl}}/api/tasks/1/subtasks/1",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{jwt}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"编写 README（已更新）\",\n  \"status\": \"COMPLETED\"\n}"
        }
      }
    },
    {
      "name": "15. 删除子任务",
      "request": {
        "method": "DELETE",
        "url": "{{baseUrl}}/api/tasks/1/subtasks/1",
        "header": [{ "key": "Authorization", "value": "Bearer {{jwt}}" }]
      }
    }
  ]
}